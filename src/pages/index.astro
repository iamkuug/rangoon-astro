---
import { Container } from "../components/container";
import { HomeHero } from "../components/home-hero";
import Separator from "../components/separator";
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";

import rangoonLogoWhite from "../assets/rangoon-logo-white.png";
import canonTowerGray from "../assets/canon-tower-gray.png";
import huawei1 from "../assets/huawei/h-1.png";
import huawei2 from "../assets/huawei/h-2.png";
import infinity1 from "../assets/infinity-towers/inf-1.png";
import infinity2 from "../assets/infinity-towers/inf-2.png";
import goldkeyLogo from "../assets/goldkey-logo.png";
import icLogoWhite from "../assets/ic-logo-white.png";
import standardCharteredLogo from "../assets/standard-chartered-logo.png";
import filterBg1 from "../assets/filter-bg/filter-bg-1.png"
import { Image } from "astro:assets";
---

<Layout title='Home | Rangoon REIT' showNavbar={false}>
      <HomeHero client:only />
      <section class="relative flex items-center justify-center py-8 md:py-10 px-4 md:px-5">
        <img
          class="absolute inset-0 w-full h-full object-cover -z-10"
          src={filterBg1.src}
          alt="canon-tower-gray"
        />
        <div class="flex flex-col md:flex-row items-center justify-center w-full md:w-4/5 mx-auto gap-y-6 md:gap-x-20 min-h-[250px]">
          <div class="w-[200px] md:w-[350px]">
            <img src={rangoonLogoWhite.src} alt="Rangoon-Logo" class="w-full" />
          </div>
          <div class="flex flex-col items-start w-full md:w-1/2 gap-y-4 text-center md:text-left">
            <div class="h-1.5 w-1/3 bg-white mx-auto md:mx-0" />
            <p class="text-white text-sm w-full md:w-5/6">
              Rangoon Real Estate Invest Trust (REIT) is a real estate
              investment trust established to invest directly and indirectly in
              a portfolio of income-generating real estate assets primarily used
              for commercial purposes. It aims to provide shareholders with
              stable currency -protected income distributions and long-term
              growth in the net asset value of properties.
            </p>
            <a
              href="/about-us"
              class="transition-all duration-200 ease-in-out font-semibold bg-white text-brand-primary rounded-full px-4 py-1 mx-auto md:mx-0 hover:ring-1 hover:ring-white hover:ring-offset-1 active:bg-brand-secondary/80"
            >
              <span>Learn More</span>
            </a>

          </div>
        </div>
      </section>
      <section class="relative font-sans py-12 md:py-24 px-4 md:px-5 flex flex-col items-center justify-center gap-y-8 bg-white overflow-hidden">
        <img
          class="absolute inset-0 w-full h-full object-cover opacity-10 md:opacity-30"
          src={canonTowerGray.src}
          alt="canon-tower-gray"
        />
        <div class="w-full md:w-4/5 relative">
          <div class="flex flex-col md:flex-row w-full md:gap-40 gap-y-6">
            <div class="w-full md:w-1/3 text-center md:text-left">
              <h1 class="font-semibold text-4xl md:text-5xl leading-[3rem] text-brand-primary">
                Property Portfolio
              </h1>
            </div>

            <div class="flex flex-col items-start w-full md:px-10 gap-y-5">
              <div class="flex flex-col md:flex-row items-center gap-3 w-full">
                <div class="bg-gray-50 w-full h-48 md:h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={huawei1}
                    alt="huawei-1"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
                <div class="bg-gray-50 w-full md:w-4/5 h-48 md:h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={huawei2}
                    alt="huawei-2"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
              </div>
              <span class="text-brand-primary font-semibold text-lg mx-auto md:mx-0">
                Huawei Building
              </span>
            </div>
          </div>
        </div>

        <div class="w-full md:w-4/5 ">
          <div class="flex flex-col md:flex-row w-full md:gap-40 gap-y-6">
            <div class="flex flex-col gap-y-3 w-full md:w-1/3 text-center md:text-left">
              <h1 class="font-semibold text-6xl md:text-7xl leading-[2.5rem] text-gray-400">
                100%
              </h1>
              <span class="text-gray-400 text-xl w-full">
                Focus on Excellence
              </span>
            </div>

            <div class="flex flex-col items-start w-full gap-y-5 md:px-10">
              <div class="flex flex-col md:flex-row items-center gap-3 w-full relative z-10">
                <div class="bg-gray-50 w-full md:w-4/5 h-48 md:h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={infinity1}
                    alt="infinity-tower-1"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
                <div class="bg-gray-50 w-full h-48 md:h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={infinity2}
                    alt="infinity-tower-2"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
              </div>
              <span class="text-brand-primary font-semibold text-lg mx-auto md:mx-0 relative z-10">
                Infinity Tower
              </span>
            </div>
          </div>
        </div>
      </section>
</Layout>
