---
import { Container } from "../components/container";
import { HomeHero } from "../components/home-hero";
import Separator from "../components/separator";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

import rangoonLogoWhite from "../assets/rangoon-logo-white.png";
import canonTowerGray from "../assets/canon-tower-gray.png";
import huawei1 from "../assets/huawei/h-1.png";
import huawei2 from "../assets/huawei/h-2.png";
import infinity1 from "../assets/infinity-towers/inf-1.png";
import infinity2 from "../assets/infinity-towers/inf-2.png";
import goldkeyLogo from "../assets/goldkey-logo.png";
import icLogoWhite from "../assets/ic-logo-white.png";
import standardCharteredLogo from "../assets/standard-chartered-logo.png";
import { Image } from "astro:assets";
---

<Layout title='Home | Rangoon REIT'>
      <HomeHero client:load/>
      <section class="bg-brand-primary flex items-center justify-center py-10 px-5">
        <div class="flex items-center justify-between max-w-4xl mx-auto gap-x-20 h-[250px]">
          <div>
            <img src={rangoonLogoWhite.src} alt="Rangoon-Logo" />
          </div>
          <div class="flex flex-col items-start w-full gap-y-4">
            <div class="h-1.5 w-1/3 bg-brand-secondary" />
            <p class="text-white text-sm w-5/6">
              Rangoon Real Estate Invest Trust (REIT) is a real estate
              investment trust established to invest directly and indirectly in
              a portfolio of income-generating real estate assets primarily used
              for commercial purposes. It aims to provide shareholders with
              stable currency -protected income distributions and long-term
              growth in the net asset value of properties.
            </p>
            <a
              href="/about-us"
              class="font-semibold bg-brand-secondary text-brand-primary rounded-full  px-4 py-1  hover:ring-1 hover:ring-white hover:ring-offset-1 active:bg-brand-secondary/80"
            >
              <span>Learn More</span>
            </a>
          </div>
        </div>
      </section>
      <section class="relative py-24 px-5 flex flex-col items-center justify-center gap-y-8">
        <img
          class="absolute -z-10"
          src={canonTowerGray.src}
          alt="canon-tower-gray"
        />
        <div class="w-4/5">
          <div class="flex w-full gap-40">
            <div class="w-1/3">
              <h1 class="font-semibold text-5xl leading-[3rem] text-brand-primary ">
                Property Portfolio
              </h1>
            </div>

            <div class="flex flex-col items-start w-full px-10 gap-y-5">
              <div class="flex items-center gap-3 w-full">
                <div class="bg-gray-50 w-full h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={huawei1}
                    alt="huawei-1"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
                <div class="bg-gray-50 w-4/5 h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={huawei2}
                    alt="huawei-2"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
              </div>
              <span class="text-brand-primary font-semibold text-lg">
                Huawei Building
              </span>
            </div>
          </div>
        </div>

        <div class="w-4/5">
          <div class="flex w-full gap-40">
            <div class="flex flex-col gap-y-3 w-1/3">
              <h1 class="font-semibold text-7xl leading-[2.5rem] text-gray-400 ">
                100%
              </h1>
              <span class="text-gray-400 text-xl w-full">
                Focus on Excellence
              </span>
            </div>

            <div class="flex flex-col items-start w-full gap-y-5 px-10">
              <div class="flex items-center gap-3 w-full">
                <div class="bg-gray-50 w-4/5 h-64 cursor-pointer " data-lightbox="true">
                  <Image
                    src={infinity1}
                    alt="infinity-tower-1"
                    class="h-full w-full object-coveri border-2 border-gray-50"
                  />
                </div>
                <div class="bg-gray-50 w-full h-64 cursor-pointer" data-lightbox="true">
                  <Image
                    src={infinity2}
                    alt="infinity-tower-2"
                    class="h-full w-full object-cover border-2 border-gray-50"
                  />
                </div>
              </div>
              <span class="text-brand-primary font-semibold text-lg">
                Infinity Tower
              </span>
            </div>
          </div>
        </div>
      </section>
      <section class="bg-brand-primary text-white py-10 px-5 flex items-center justify-center h-[250px]">
        <Container className="flex items-center justify-between">
          <h2 class="text-4xl font-semibold">Our Partners</h2>
          <Separator
            color="white"
            thickness="1px"
            width="50px"
            margin="0 2rem"
            vertical={true}
          />
          <div class="flex gap-x-16 items-center">
            <div class="w-52 flex items-center justify-center">
              <img
                src={goldkeyLogo.src}
                alt="goldkey-logo"
                class="w-full h-full object-contain"
              />
            </div>
            <div class="w-28 flex items-center justify-center">
              <img
                src={icLogoWhite.src}
                alt="ic-logo"
                class="w-full h-full object-contain"
              />
            </div>
            <div class="w-36 flex items-center justify-center">
              <img
                src={standardCharteredLogo.src}
                alt="standard-chartered-logo"
                class="w-full h-full object-contain"
              />
            </div>
          </div>
        </Container>
      </section>   
</Layout>
